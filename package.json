{
  "name": "keyboard-testing-library",
  "version": "0.0.0-development",
  "description": "An extension of Testing Library focused on simulating keyboard-only users' behaviors",
  "main": "dist/index",
  "typings": "dist/index",
  "scripts": {
    "build": "tsc -p .",
    "test": "npm run build && jest",
    "commit": "npx cz",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Grunet/keyboard-testing-library.git"
  },
  "keywords": [
    "testing",
    "keyboard",
    "accessibility",
    "a11y"
  ],
  "author": "Grunet",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Grunet/keyboard-testing-library/issues"
  },
  "homepage": "https://github.com/Grunet/keyboard-testing-library#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.4",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1",
    "semantic-release": "^17.3.9",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "**/*": "prettier --write"
  }
}
